<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/gallery_editoria_indicator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e40000"
        android:textIsSelectable="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gallery_main_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/gallery_editoria_indicator"
        android:background="#000000" />

    <TextView
        android:id="@+id/gallery_main_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gallery_bottom_pager"
        android:background="#CC1A1A1A"
        android:padding="8dp"
        android:text="@string/legenda_da_foto"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false" />

    <Gallery
        android:id="@+id/gallery_bottom_pager"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:spacing="1dp" />

</RelativeLayout>